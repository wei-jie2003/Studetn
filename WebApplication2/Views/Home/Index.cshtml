@model IEnumerable<WebApplication2.Model.Student>
@{
    ViewBag.Title = "学生列表";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3 class="card-title">@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/weijie1.jpg" asp-append-version="true" />
            <div class="card-body text-center">
                <h5 class="card-title">主修科目:@student.Major</h5>
            </div>

            <div class="card-footer text-center">
                <a class="btn btn-primary m-1" asp-controller="home" asp-action="details" asp-route-id="@student.Id">查看</a>
                <a href="#" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>
            </div>
        </div>
    }
</div> 